@model IEnumerable<BierTier.Models.Beer>

@{
    ViewData["Title"] = "Search";
}
<!-- Search logic in BeerController.cs -->
<h3>Search Results</h3>

@using (Html.BeginForm())
{
    @Html.TextBox("SearchString")
    <div class="input-group input-group-lg">
        <input asp-area="" asp-controller="Beer" asp-action="Search" type="submit" class="btn btn-info btn-lg" value="Search" />
    </div>
}

@if(Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Brewery)
                    </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) 
        {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Image)" img class="img-responsive"/>
            </td>
            <td>
                <i>
                @Html.DisplayFor(modelItem => item.Name)
                </i>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brewery)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BeerId" class="btn btn-info">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.BeerId" class="btn btn-warning">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.BeerId" class="btn btn-danger">Delete</a>
            </td>
        </tr> 
        }
    </tbody>
</table>
}

else
{
    <h4>No matching beers found.</h4>
}