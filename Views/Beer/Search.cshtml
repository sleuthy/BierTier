@model IEnumerable<BierTier.Models.Beer>

@{
    ViewData["Title"] = "Search";
}
<!-- Search logic in BeerController.cs -->
<h3>Find a beer.</h3>
<br>

@using (Html.BeginForm())
{
    @Html.TextBox("SearchString")
    <div class="input-group input-group-lg">
        <br>
        <input asp-area="" asp-controller="Beer" asp-action="Search" type="submit" class="btn btn-info btn-lg" value="Search" />
    </div>
}
<br>

@if(Model.Count() > 0)
{
    <h3>Search Results</h3>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Brewery)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) 
        {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Image)" img class="img-responsive" height=150 width=100/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brewery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <!-- <a asp-action="Edit" asp-route-id="@item.BeerId" class="btn btn-primary">Edit</a>  -->
                <p><a asp-action="Details" asp-route-id="@item.BeerId" class="btn btn-primary btn-md resultsbutton">Details</a></p>
                <p><a asp-action="Favorites" asp-route-id=@item.BeerId class="btn btn-primary btn-md resultsbutton">Add to Favorites</a></p>
                <p><a asp-action="Wishlist" asp-route-id=@item.BeerId class="btn btn-primary btn-md resultsbutton">Add to Wishlist</a></p>
                <!-- <a asp-action="Delete" asp-route-id="@item.BeerId" class="btn btn-danger">Delete</a> -->
            </td>
        </tr> 
        }
    </tbody>
</table>
}

else
{
    <h4>No matching beers found.</h4>
}