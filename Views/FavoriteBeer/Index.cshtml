@model IEnumerable<BierTier.Models.FavoriteBeer>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IndivBeer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IndivBeer.BeerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FavoriteBeerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FavoriteBeerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FavoriteBeerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
